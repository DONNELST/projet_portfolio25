{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Formulaire centré et responsive */
        .form-container {
            background-color: #000;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(255, 255, 255, 0.19);
            max-width: 500px;
            width: 90%;
            margin: 50px auto;
            color: white;
        }

        fieldset legend {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .form-check-input {
            -webkit-appearance: none;
            -moz-appearance: none;
            appearance: none;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            border: 2px solid #ccc;
            background-color: white;
            position: relative;
            transition: all 0.3s ease;
        }

        .form-check-input:checked {
            background-color: #888;
            border-color: #888;
        }

        .form-check-input:checked::before {
            content: '';
            position: absolute;
            top: 4px;
            left: 4px;
            width: 10px;
            height: 10px;
            border-radius: 50%;
            background-color: white;
        }

        .form-check-input:disabled {
            background-color: #f0f0f0;
            border-color: #ccc;
        }

        .form-check {
            margin-top: 10px;
        }
    </style>
{% endblock %}

{% block body %}
<div class="form-container">
    <form method="post" >
        <fieldset>
            <legend>Afin de télécharger mon CV au format PDF, veuillez remplir le formulaire ci-dessous :</legend>

            <div class="mb-3">
                <label for="email" class="form-label">Adresse Mail</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="Entrez votre email" required>
                <small class="form-text text-muted">Je ne partagerai pas votre adresse Mail avec d'autres personnes ou institutions.</small>
            </div>

            <div class="mb-3">
                <label for="telephone" class="form-label">Numéro de téléphone</label>
                <input type="tel" class="form-control" id="telephone" name="telephone" placeholder="Entrez votre numéro de téléphone" required>
            </div>

            <div class="mb-3">
                <label for="profil" class="form-label">Qui êtes-vous ?</label>
                <select class="form-select" id="profil" name="profil">
                    <option>Professionnel</option>
                    <option>Particulier</option>
                    <option>Autre</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="autre" class="form-label">Si autre, précisez :</label>
                <textarea class="form-control" id="autre" name="autre" rows="1"></textarea>
            </div>

            <fieldset class="mb-3">
                <legend>Avis :</legend>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="avis" id="avis1" value="interesse" checked>
                    <label class="form-check-label" for="avis1">
                        Je suis intéressé par votre profil.
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="avis" id="avis2" value="autres_profils">
                    <label class="form-check-label" for="avis2">
                        Je suis intéressé par votre profil, mais je pense avoir des profils plus adaptés.
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="avis" id="avis3" value="non_correspond">
                    <label class="form-check-label" for="avis3">
                        Votre profil ne correspond pas à mes/nos attentes.
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="avis" id="avis4" value="autre">
                    <label class="form-check-label" for="avis4">
                        Autre
                    </label>
                </div>
            </fieldset>

            <button type="submit" class="btn btn-primary">Envoyer et Télécharger le CV</button>
        </fieldset>
    </form>
</div>
{% endblock %}
